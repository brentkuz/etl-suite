
@{
    ViewData["Title"] = "Manage";
}

<h2>Manage</h2>

<div id="manageTabApp">
    <button class="btn btn-default" v-on:click="ChangeTab('Info')">Project Info</button>
    <button class="btn btn-default" v-on:click="ChangeTab('Config')">Configuration</button>
    <button class="btn btn-default" v-on:click="ChangeTab('Schema')">Upload Schema</button>
    <button class="btn btn-default" v-on:click="ChangeTab('Jobs')">Jobs</button>
</div>
<div id="contentTarget">

</div>



@section scripts{
<environment include="Development">
    @* Services *@
    <script src="~/js/services/project-service.js"></script>
    <script src="~/js/services/schema-tree-service.js"></script>

    @*Apps*@
    <script src="~/js/apps/schema-tree-app.js"></script>
    <script src="~/js/apps/project-info-app.js"></script>
    <script src="~/js/apps/manage-tab-app.js"></script>

</environment>
    <environment exclude="Development">
        <script src="~/dist/manage-projects.min.js" asp-append-version="true"></script>
    </environment>
}