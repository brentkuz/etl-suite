
<div id="dbConnectionApp">
    <h4>Database Connections</h4>
    <span id="dbConnectionAppNotification"></span>
    <div class="row">
        <div class="col-sm-3">
            <label>Name</label>
        </div>
        <div class="col-sm-5">
            <label>Description</label>
        </div>
        <div class="col-sm-2">
            <label>Type</label>
        </div>
        <div class="col-sm-2"></div>
    </div>

    <div class="row" v-for="d in Definitions">
        <div class="col-sm-3">
            {{d.Name}}
        </div>
        <div class="col-sm-5">
            {{d.Description}}
        </div>
        <div class="col-sm-2">
            {{d.Type}}
        </div>
        <div class="col-sm-2">
            <button class="btn-link" v-on:click="EditConnection(d.Id)">Edit</button>
        </div>
    </div>
</div>
<hr />

